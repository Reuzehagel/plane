{
  "permissions": {
    "allow": [
      "Bash(bun run tsc:*)"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "bun run tsc --noEmit 2>&1 | head -20"
          }
        ]
      }
    ]
  }
}
